@model IEnumerable<YungChing.Models.houseSheet>

@{
    ViewBag.Title = "myList";
}

<h2>我的名單</h2>
<p style="text-align:right;">
    @Html.ActionLink("回首頁", "mainPage", "Main")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.hName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hPhoto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="width:160px;">
            @Html.DisplayFor(modelItem => item.hName)
        </td>
        <td style="width:350px;">
            @Html.DisplayFor(modelItem => item.hText)
        </td>
        <td>
            <img src="@item.hPhoto" style="width:350px;height:200px;"/>
        </td>
        <td style="width:120px;">
            @Html.ActionLink("從我的名單刪除", "deleteList", "Main", new { id = item.hId.ToString()},null)
        </td>
    </tr>
}

</table>
