@model YungChing.Models.CMember
@{
    ViewBag.Title = "signUp";
}
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>註冊會員</title>

        @* 說明:Jquery & bootstrap CDN*@
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        @*sweetalert2 CDN*@
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

        <script>
        $(document).ready(function () {

            //說明:153行DEMO按鈕觸發事件，代入Input欄位多筆值
            $("#bt").click(function () {
                $("#memberName").val("david");
                $("#email").val("david111@@gmail.com");
                $("#pw").val("david111");
                $("#pw2").val("david111");
                $("#add").val("台北市大安區復興南路一段390號");
                $("#gen").val("男");
                $("#birthD").val("1991-10-16");
            });
        });

        //說明:171行使用者照片圓框，新增前端預覽照片效果
        var loadFile = function (event) {
            var output = document.getElementById('output');
            output.src = URL.createObjectURL(event.target.files[0]);
            output.onload = function () {
                URL.revokeObjectURL(output.src) // free memory
            };
        };

        function Alert() {

            Swal.fire({
                position: 'top-end',
                icon: 'success',
                title: '註冊成功!',
                showConfirmButton: false,
                timer: 1500
            })
        }

        </script>

        @*說明:輸入google字體(圓字體)*@
        <style>
            @@import url(https://fonts.googleapis.com/earlyaccess/cwtexyen.css);
        </style>

        <style>

            /*說明:161行建立會員*/
            .b1 {
                font-size: 36px;
                font-family: "cwTeXYen", sans-serif;
                color: slategray;
                margin-left: 44%;
            }

            /*164行表單*/
            form {
                width: 700px;
                margin-left: 20%;
                border: solid 1px;
                border-color: black;
                border-radius: 16px;
                background-color: whitesmoke;
                opacity: 0.9;
            }

            /*165行表單上層填滿效果*/
            .TopDiv {
                background-image: url("../../Content/灑紅節改.jpg");
                height: 15px;
                border-top-left-radius: 28px;
                border-top-right-radius: 28px;
            }

            /*169行使用者照片圓框外層div*/
            .memberPhoto2 {
                margin-left: 262px;
                margin-top: 10px;
                display: flex;
                justify-content: center;
                width: 150px;
                height: 150px;
                border-radius: 999em;
            }

            /* 171行使用者照片圓框img*/
            .IMG {
                height: 150px;
                width: 150px;
                border-radius: 999em;
            }

            /*174行上傳Inputdiv*/
            .memberInput {
                margin-bottom: 10px;
                margin-left: 298px;
                width: 100px;
                display: flex;
                justify-content: center;
            }

            /*175行上傳Input*/
            #memberPhotoFile2 {
                background-color: whitesmoke;
                border-style: none;
            }

            /*284行表單送出按鈕div*/
            #SubBtn {
                display: flex;
                justify-content: center;
                margin-bottom: 5px;
            }

            /*285行表單送出按鈕*/
            .INPUT {
                margin-top: 5px;
                height: 35px;
            }

            /*表單最下層圖片填滿效果*/
            #ButtomDiv {
                display: flex;
                justify-content: center;
                height: 15px;
                /* margin-bottom: 8px;*/
                border-bottom-left-radius: 28px;
                border-bottom-right-radius: 28px;
                background-image: url(../../Content/灑紅節改.jpg)
            }
        </style>
        @*說明:連結google字體*@
        <link href="https://fonts.googleapis.com/css2?family=Grandstander:wght@300&family=Noto+Sans+TC&display=swap" rel="stylesheet">

    </head>
    <body id="BODY">
        @*說明:頁面右上角DEMO按鈕*@
        <div style="margin-left:77%; width:80px;height:30px;">
            <button id="bt" style="margin-top:10px; background-color:transparent;">DEMO</button>
        </div>

        <p><b class="b1">建立會員</b></p>

        @*說明:註冊主表單*@
        <form id="register" method="post" action="signUp" enctype="multipart/form-data">

            @*說明:表單最上層彩色填滿效果*@
            <div class="TopDiv"></div>

            @*說明:使用者照片顯示圓框*@
            <div class="memberPhoto2">
                <img id="output" class="IMG" src="../Content/userPhoto.png" />
            </div>

            @*說明:上傳圖片*@
            <div class="memberInput">
                <input id="memberPhotoFile2" type="file" accept="image/*" onchange="loadFile(event)" class="form-control btn btn-info" name="image" value="上傳大頭貼">
            </div>

            @*說明:表單中間*字號與文字說明*@
            <p style="display:inline-block;color:crimson;margin-left:35px;font-size:20px;">*</p>
            <p style="display:inline-block;font-size:14px;font-weight:bold;">此區為必填</p>

            @*說明:fNickName_Member欄位*@
            <div class="form-group" style="margin-left:50px; margin-top:15px;">
                <label>暱稱</label>
                <input id="memberName" class="form-control" type="text" name="uName" style="width:265px;" />
                @Html.ValidationMessageFor(model => model.uName, "", new { @class = "text-danger" })
            </div>

            @*說明:fEmail_Member欄位*@
            <div class="form-row" style="margin-left:45px;">
                <div class="form-group col-md-5">
                    <label>Email</label>
                    <input id="email" class="form-control" type="text" name="uEmail" />
                    @Html.ValidationMessageFor(model => model.uEmail, "", new { @class = "text-danger" })
                    <span id="email_warn"></span>
                </div>
            </div>

            @*說明:fPassword_Member欄位*@
            <div class="form-row" style="margin-left:45px;">
                <div class="form-group col-md-5">
                    <label>密碼</label>
                    <input id="pw" class="form-control" type="password" name="uPassword" />
                    @Html.ValidationMessageFor(model => model.uPassword, "", new { @class = "text-danger" })
                </div>

                @*說明:確認密碼欄位*@
                <div class="form-group col-md-5" style="margin-left:30px;">
                    <label>確認密碼</label>
                    <input id="pw2" class="form-control" type="password" name="confirmPW" />
                    @Html.ValidationMessageFor(model => model.confirmPW, "", new { @class = "text-danger" })
                </div>
            </div>

            @*說明:表單中間分隔虛線*@
            <div class="form-group" style="height:1px; width:600px;border:0.5px dashed;margin-top:20px;margin-left:35px; border-color:darkgrey;"></div>

            @*說明:地址欄位*@
            <div class="form-row" style="margin-left:45px;">
                <div class="form-group col-md-5">
                    <label class="address">地址</label>
                    <input id="add" class="form-control" type="text" name="uAddress" />
                </div>
            </div>

            @*說明:生日欄位*@
            <div class="form-row" style="margin-bottom:15px;margin-left:45px;">
                <div class="form-group col-md-5">
                    <label>生日</label>
                    <input id="birthD" class="form-control" type="date" name="uAge" min="1900-01-01" max="2020-11-10" />
                </div>
            </div>

            @*說明:性別欄位*@
            <div class="form-group" style="margin-left:50px;margin-bottom:25px;">
                <label>性別</label>
                <select id="gen" class="form-control" name="uGender" style="width:63px;">
                    <option value="男">男</option>
                    <option value="女">女</option>
                </select>
            </div>

            @*表單下面送出按鈕*@
            <div id="SubBtn">
                <button id="SUBMIT" class="INPUT btn btn-info" type="submit" form="register" onclick="Alert()">註冊</button>
            </div>

            @*表單最下層圖片填滿效果*@
            <div id="ButtomDiv"></div>
        </form>

    </body>
</html>